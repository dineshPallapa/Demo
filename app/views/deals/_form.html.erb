<%= simple_form_for @deal, html: { multipart: true } do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories),{ :class => 'btn btn-block btn-default btn-default' }) %>
  <%= f.input :image, as: :file %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :link %>
  <%= f.input :link1 %>
  <%= f.button :submit %> 
<% end %>